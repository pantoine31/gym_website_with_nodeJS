<!DOCTYPE html>
<% if (role == "admin") { %>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"
        integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>

<body>

    <nav class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="mainpage_style.html">
                    <!-- <img sic="icons/logo.png" id="logo"> -->
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/admin_announ">Publish Announcements</a></li>
                    <li><a href="/admin_req">Register Requests</a></li>
                    <li><a href="/admin_users">Users Managment</a></li> 
                    <li><a href="/admin_trainning">Admin Trainning</a></li> 
                    <li><a href="/admin_program">Managment Program</a></li> 
                    <li><a href="/logout">Sign-Out</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <h2 style="text-align: center;">Admin Trainning</h2>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Exercise</th>
                <th scope="col">Trainer</th>
                <th scope="col">Category</th>
            </tr>
        </thead>
        <tbody>
            <%gymList.forEach(gym=> {%>
                <tr>
                    <th scope="row">
                        <%= gym._id %>
                    </th>
                    <td>
                        <%= gym.ex %>
                    </td>
                    <td>
                        <%= gym.trainer %>
                    </td>
                    <td>
                        <%= gym.category %>
                    </td>
                    <td>
                        <form action="/delete_trainning" method="post">
                            <input type="hidden" name="exersice" value="<%= gym.ex %>">
                            <button type="submit" value="delete" name="delete" >Delete</button>
                        </form>
                    </td>
                </tr>
                <%})%>
        </tbody>
    </table>
    <br>
    <br>
    <br>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">New Trainning</h3>
                    </div>
                    <div class="panel-body">
                        <form action="/add_trainning" method="POST">
                            <div class="form-group">
                                <label for="exersice">Exercise</label>
                                <input type="text" class="form-control" id="exersice" name="exersice" required>
                            </div>
                            <div class="form-group">
                                <label for="trainer">Trainer name</label>
                                <input type="text" class="form-control" id="trainer" name="trainer" required>
                            </div>
                            <div class="form-group">
                                <label for="category">Category</label>
                                <select id="category" name="category">
                                    <option value="cardio">Cardio</option>
                                    <option value="weight">Weight</option>
                                </select>                                
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Create</button>
                        </form>
                        
                    </div>
                </div>
            </div>

            <div class="col-md-6 col-md-offset-3">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Update Trainning</h3>
                    </div>
                    <div class="panel-body">
                        <form action="/update_trainning" method="POST">
                            <div class="form-group">
                                <label for="exersice">Exersice</label>
                                <input type="text" class="form-control" id="exersice" name="exersice" required>
                            </div>
                            <div class="form-group">
                                <label for="trainer">Trainer name</label>
                                <input type="text" class="form-control" id="trainer" name="trainer" required>
                            </div>
                            <div class="form-group">
                                <label for="category">Category</label>
                                <select id="category" name="category">
                                    <option value="cardio">Cardio</option>
                                    <option value="weight">Weight</option>
                                </select>  
                            </div>

                            <button type="submit" class="btn btn-primary btn-block">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    
</body>

</html>

</html>
<%}%>